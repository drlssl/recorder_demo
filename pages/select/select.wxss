.box{
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: center;
  justify-items: center;
}

.nav-list {
  margin-top: 30%;
  display: flex;
  flex-wrap: wrap;
  padding: 0px 40rpx 0px;
  justify-content:center;
}

.nav-li {
  padding: 30rpx;
  border-radius: 12rpx;
  width: 80%;
  margin: 0 2.5% 40rpx;
  background-image: url(https://image.weilanwl.com/color2.0/cardBg.png);
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
  margin-top: 60rpx;
}

.nav-li::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: -10%;
  border-radius: 10rpx;
  opacity: 0.2;
  transform: scale(0.9, 0.9);
}

.nav-li.cur {
  color: #fff;
  background: rgb(94, 185, 94);
  box-shadow: 4rpx 4rpx 6rpx rgba(94, 185, 94, 0.4);
}
