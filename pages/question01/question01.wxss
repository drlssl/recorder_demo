image {
  width: 150rpx;
  height: 150rpx;
}

.global-page {
  height: 100vh;
}

.part1{
  height: 10%;
}
.part2{
  height:40%
}
.part3{
  height: 35%;
}
.part4{
  height: 15%;
}


.clock {
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.word {
  width: 90%;
  height: 70%;
  margin-left: 5%;
  padding-top: 10%;
  padding-bottom: 10%;
  font-size: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bolder;
  /* font-style: oblique; */
}

.title {
  font-size: medium;
  font-style: oblique;
  padding-left: 30rpx;
  /* padding-top: 10rpx; */
  padding-right: 30rpx;
  text-align: justify;
}

.button-page {
  height: 20%;
}


.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 150px;
}

.time-big {
  font-size: 30px;
  margin: 10px;
}

.time-small {
  font-size: 15px;
}

.button-stop-record {
  width: 100rpx;
  height: 100rpx;
  border: 10rpx solid #fff;
  background-color: #f55c23;
  border-radius: 100px;
  margin: 0 auto;
}

.caption {
  margin-top: 8%;
  text-align: center;
  color: #f55c23;
}


.countDown {
  text-align: center;
}

.page-body-buttons {
  margin-top: 30rpx;
  height: 30%;
  display: flex;
  padding-left: 0rpx;
  justify-content: space-around;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}